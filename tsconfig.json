{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": true,
        "sourceMap": true,
        "isolatedModules": true,
        "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "types": [
            "jest",
            "node"
        ],
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "es2017",
            "dom",
            "es2018.promise",
            "scripthost"
        ]
    },
    "include": [
        "./functions/*.ts",
        "./__test__/*.spec.ts"
    ],
    "exclude": [
        "/node_modules/"
    ]
}